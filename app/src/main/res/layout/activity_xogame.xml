<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".XOGameActivity">

    <GridLayout
        android:id="@+id/gridLayout_board"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/boarddd"
        android:columnCount="3"
        android:rowCount="3">

        <ImageView
            android:id="@+id/imageView_1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginStart="8dp"
            android:onClick="dropXO"
            android:tag="0" />

        <ImageView
            android:id="@+id/imageView_2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="1"

            android:layout_marginStart="8dp"
            android:onClick="dropXO"
            android:tag="1" />

        <ImageView
            android:id="@+id/imageView_3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="2"

            android:layout_marginStart="8dp"
            android:onClick="dropXO"
            android:tag="2" />

        <ImageView
            android:id="@+id/imageView_4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="1"
            android:layout_column="0"

            android:layout_marginStart="8dp"
            android:onClick="dropXO"
            android:tag="3" />

        <ImageView
            android:id="@+id/imageView_5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="1"
            android:layout_column="1"

            android:layout_marginStart="8dp"
            android:onClick="dropXO"
            android:tag="4" />

        <ImageView
            android:id="@+id/imageView_6"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="1"

            android:layout_column="2"
            android:layout_marginStart="8dp"
            android:onClick="dropXO"
            android:tag="5" />

        <ImageView
            android:id="@+id/imageView_7"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="2"

            android:layout_column="0"
            android:layout_marginStart="8dp"
            android:onClick="dropXO"
            android:tag="6" />

        <ImageView
            android:id="@+id/imageView_8"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginStart="8dp"
            android:onClick="dropXO"
            android:tag="7" />

        <ImageView
            android:id="@+id/imageView_9"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="2"

            android:layout_column="2"
            android:layout_marginStart="8dp"
            android:onClick="dropXO"
            android:tag="8" />

    </GridLayout>

    <LinearLayout
        android:id="@+id/winner_layout"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#E1373234"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_winner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/the_winner_is"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_playAgain"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:onClick="playAgain"
            android:text="@string/play_again"
            android:textSize="20sp" />

    </LinearLayout>


</RelativeLayout>